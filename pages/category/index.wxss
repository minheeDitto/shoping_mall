 page{
  height: 100%;

 }
 .category_index{
  height: 100%;
}
.category_index .cates_container{
  height: calc(100vh - 90rpx);
  display: flex;
}

.category_index .cates_container .left_menu{
  flex: 2;
 

}
.category_index .cates_container .left_menu .menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;

}
.category_index .cates_container .left_menu .active{

  color:var(--themeColor);
  border-left: 5px solid currentColor;
}

.category_index .cates_container  .right_content{
  flex: 5;

}
.category_index .cates_container  .right_content .goods .goods_list{
  display: flex;
  flex-wrap: wrap;

}
.category_index .cates_container  .right_content .goods .goods_list navigator{

    width: 33.33%;
    text-align: center;
}
.goods_list navigator image{
  width: 50%;
}
.goods .goods_title{
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: center;

}